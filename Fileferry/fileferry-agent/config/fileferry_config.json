{
  "fileFerry": {
    "aws": {
      "region": "us-east-1",
      "s3": {
        "bucketName": "your-s3-bucket-name",
        "accessControl": "private"
      },
      "sso": {
        "sso_start_url": "https://your-sso-portal.awsapps.com/start",
        "sso_region": "us-east-1",
        "account_id": "123456789012",
        "role_name": "FileFerryReadOnlyRole",
        "session_duration": 10
      },
      "lambda": {
        "functionName": "FileFerryAgentFunction",
        "timeout": 900,
        "memorySize": 512
      },
      "iam": {
        "role": "FileFerryAgentRole",
        "permissions": [
          "s3:GetObject",
          "s3:ListBucket",
          "sts:AssumeRole",
          "logs:CreateLogGroup",
          "logs:CreateLogStream",
          "logs:PutLogEvents"
        ]
      }
    },
    "serviceNow": {
      "instance_url": "https://your-instance.service-now.com",
      "username": "api_user",
      "password": "your_password_or_use_env_variable",
      "api_version": "v2",
      "table": "incident"
    },
    "fileTransfer": {
      "maxRetries": 3,
      "retryDelay": 5000,
      "chunkSize": 8388608,
      "enableCompression": true
    },
    "logging": {
      "level": "INFO",
      "logFilePath": "./logs/fileferry.log"
    },
    "notification": {
      "enabled": true,
      "channels": [
        "teams",
        "email"
      ],
      "teams_webhook_url": "https://your-tenant.webhook.office.com/webhookb2/...",
      "email_enabled": false,
      "slack_webhook_url": ""
    },
    "monitoring": {
      "enabled": true,
      "datadog_api_key": "your_datadog_api_key_or_use_env_variable",
      "datadog_app_key": "your_datadog_app_key_or_use_env_variable",
      "environment": "production",
      "service_name": "fileferry-agent",
      "statsd_host": "localhost",
      "statsd_port": 8125
    },
    "sftp": {
      "host": "your-sftp-host",
      "port": 22,
      "username": "your-sftp-username",
      "password": "your-sftp-password",
      "private_key_path": "",
      "timeout": 30
    },
    "ftp": {
      "host": "your-ftp-host",
      "port": 21,
      "username": "your-ftp-username",
      "password": "your-ftp-password",
      "timeout": 30,
      "passive_mode": true
    }
  }
}